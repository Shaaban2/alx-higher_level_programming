#!/bin/bash

# Check if PYFILE is set
if [ -z "$PYFILE" ]; then
  echo "Error: PYFILE environment variable not set." >&2  # Print to stderr
  exit 1  # Exit with error code 1
fi

# Check if the Python script exists
if [ ! -f "$PYFILE" ]; then
  echo "Error: Python file '$PYFILE' not found." >&2 
  exit 1 
fi

# Run the Python script using the shebang
$PYFILE  


